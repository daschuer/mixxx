									<Connection>
										<ConfigKey>[Channel<Variable name="channum"/>],hotcue_4_enabled</ConfigKey>
										<ConnectValueFromWidget>false</ConnectValueFromWidget>
									</Connection>
								</PushButton>

									<NumberBpm>
										<TooltipId>visual_bpm</TooltipId>
										<Style>QLabel { font: bold 12px/14px sans-serif;
												font-family: "Open Sans";
												background-color: transparent;
												color: #191F24;
												text-align: right;
												padding-left: 0px;
												padding-top: 1px;}
										</Style>
										<Size>42f,24f</Size>
										<Pos>80,2</Pos>
										<Group>[Channel<Variable name="channum"/>]</Group>
